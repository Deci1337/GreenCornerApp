<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GreenCorner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GreenCorner.Views"
    Title="GreenCorner"
    BackgroundColor="{StaticResource BackgroundLight}"
    Shell.TabBarBackgroundColor="{StaticResource BackgroundLight}"
    Shell.TabBarForegroundColor="{StaticResource Gray500}"
    Shell.TabBarTitleColor="{StaticResource Gray500}"
    Shell.TabBarUnselectedColor="{StaticResource Gray500}">

    <TabBar>
        <Tab Title="Home" Icon="dotnet_bot.png"> 
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" Route="HomePage" />
        </Tab>
        <Tab Title="Catalog" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:CatalogPage}" Route="CatalogPage" />
        </Tab>
        <Tab Title="Blog" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:BlogPage}" Route="BlogPage" />
        </Tab>
        <Tab Title="Cart" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:CartPage}" Route="CartPage" />
        </Tab>
        <Tab Title="About" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:AboutPage}" Route="AboutPage" />
        </Tab>
        <!-- Placeholder for About/Contacts if needed in tabs, or can be in flyout -->
    </TabBar>

</Shell>
