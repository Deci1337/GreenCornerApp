<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StyleApplyToDerivedTypesConverter x:Key="StyleApplyToDerivedTypesConverter" />

    <!-- Default Global Styles -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundLight}}" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextLight}, Dark={StaticResource TextLight}}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderColor" Value="{StaticResource PrimaryDark}" />
        <Setter Property="BorderWidth" Value="2" />
    </Style>

    <!-- Neo-brutalism Components -->
    
    <!-- Primary Button (Sand/Tertiary) -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Tertiary}" />
        <Setter Property="TextColor" Value="{StaticResource TextLight}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderColor" Value="{StaticResource TextLight}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource TextLight}"
                    Offset="4,4"
                    Radius="0"
                    Opacity="1.0" />
        </Setter>
    </Style>

    <!-- Secondary Button (Green/Primary) -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="2" />
    </Style>

    <!-- Card Frame -->
    <Style x:Key="CardFrame" TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource TextLight}" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="StrokeShape" Value="Rectangle" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource TextLight}"
                    Offset="5,5"
                    Radius="0"
                    Opacity="1.0" />
        </Setter>
    </Style>
    
    <!-- Badge Label -->
    <Style x:Key="BadgeLabel" TargetType="Label">
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
        <Setter Property="TextColor" Value="{StaticResource TextLight}" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Padding" Value="6,2" />
    </Style>

    <!-- Typography -->
    <Style x:Key="Headline1" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextLight}" />
    </Style>

    <Style x:Key="Headline2" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextLight}" />
    </Style>
    
    <Style x:Key="Headline3" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextLight}" />
    </Style>

</ResourceDictionary>
