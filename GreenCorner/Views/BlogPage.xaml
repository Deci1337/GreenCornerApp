<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GreenCorner.ViewModels"
             x:Class="GreenCorner.Views.BlogPage"
             Title="Blog"
             BackgroundColor="{StaticResource BackgroundLight}">

    <CollectionView ItemsSource="{Binding Posts}" Margin="20">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="20"/>
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Style="{StaticResource CardFrame}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BlogViewModel}}, Path=GoToArticleCommand}" CommandParameter="{Binding .}"/>
                    </Border.GestureRecognizers>
                    <Grid ColumnDefinitions="120, *" Padding="10" ColumnSpacing="15">
                        <Image Grid.Column="0" Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="100"/>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                           <Label Text="{Binding Title}" FontAttributes="Bold" MaxLines="2" LineBreakMode="TailTruncation" TextColor="{StaticResource Primary}"/>
                           <Label Text="{Binding DatePublished, StringFormat='{0:MMMM dd, yyyy}'}" FontSize="12" TextColor="{StaticResource Gray500}" Margin="0,5,0,0"/>
                           <Label Text="{Binding Excerpt}" FontSize="12" MaxLines="2" LineBreakMode="TailTruncation" Margin="0,5,0,0"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
