<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GreenCorner.ViewModels"
             x:Class="GreenCorner.Views.CatalogPage"
             Title="Catalog"
             BackgroundColor="{StaticResource BackgroundLight}">

    <Grid RowDefinitions="Auto, *">
        <!-- Filter Header -->
        <ScrollView Grid.Row="0" Orientation="Horizontal" Padding="15,10" HorizontalScrollBarVisibility="Never" HeightRequest="60">
            <HorizontalStackLayout Spacing="10">
                <!-- Using simpler buttons for filters to avoid huge primary buttons -->
                <Button Text="All" Command="{Binding FilterByCommand}" CommandParameter="All" 
                        HeightRequest="40" CornerRadius="20" Padding="15,0"/>
                <Button Text="Easy" Command="{Binding FilterByCommand}" CommandParameter="Easy" 
                        HeightRequest="40" CornerRadius="20" Padding="15,0" BackgroundColor="Transparent" TextColor="{StaticResource TextLight}" BorderColor="{StaticResource Gray300}" BorderWidth="1"/>
                <Button Text="Medium" Command="{Binding FilterByCommand}" CommandParameter="Medium" 
                        HeightRequest="40" CornerRadius="20" Padding="15,0" BackgroundColor="Transparent" TextColor="{StaticResource TextLight}" BorderColor="{StaticResource Gray300}" BorderWidth="1"/>
                <Button Text="Hard" Command="{Binding FilterByCommand}" CommandParameter="Hard" 
                        HeightRequest="40" CornerRadius="20" Padding="15,0" BackgroundColor="Transparent" TextColor="{StaticResource TextLight}" BorderColor="{StaticResource Gray300}" BorderWidth="1"/>
            </HorizontalStackLayout>
        </ScrollView>

        <!-- Product Grid -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding FilteredPlants}" Margin="15,5,15,0">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="15" VerticalItemSpacing="15"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CardFrame}" Padding="0" HeightRequest="260">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CatalogViewModel}}, Path=GoToDetailsCommand}" CommandParameter="{Binding .}"/>
                        </Border.GestureRecognizers>
                        <Grid RowDefinitions="150, *">
                            <Image Grid.Row="0" Source="{Binding ImageUrl}" Aspect="AspectFill" BackgroundColor="#F5F5F5"/>
                            <Label Grid.Row="0" Text="{Binding Tag}" Style="{StaticResource BadgeLabel}" HorizontalOptions="Start" VerticalOptions="Start" Margin="10"/>

                            <VerticalStackLayout Grid.Row="1" Padding="12" Spacing="4" VerticalOptions="Center">
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="15" LineBreakMode="TailTruncation"/>
                                <Label Text="{Binding Difficulty}" FontSize="12" TextColor="{StaticResource Gray500}"/>
                                <Label Text="{Binding Price, StringFormat='${0:F2}'}" TextColor="{StaticResource Primary}" FontAttributes="Bold" Margin="0,5,0,0"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
