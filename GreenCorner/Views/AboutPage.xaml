<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenCorner.Views.AboutPage"
             Title="About Us"
             BackgroundColor="{StaticResource BackgroundLight}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Label Text="GreenCorner" Style="{StaticResource Headline1}" HorizontalOptions="Center" TextColor="{StaticResource Primary}"/>
            
            <Label Text="We bring nature to your doorstep." 
                   HorizontalOptions="Center" FontAttributes="Italic" TextColor="{StaticResource Gray500}"/>

            <Image Source="dotnet_bot.png" Aspect="AspectFill" HeightRequest="200" BackgroundColor="#E1E1E1"/>

            <Label Text="Our Mission" Style="{StaticResource Headline2}" Margin="0,10,0,0"/>
            <Label Text="At GreenCorner, we believe that everyone deserves a little bit of nature in their lives. We source the best plants from sustainable growers and deliver them to you with care."
                   LineHeight="1.5"/>

            <Label Text="Our Story" Style="{StaticResource Headline2}" Margin="0,10,0,0"/>
            <Label Text="Founded in 2023, GreenCorner started as a small garage project and has grown into a community of plant lovers."
                   LineHeight="1.5"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
