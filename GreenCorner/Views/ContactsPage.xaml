<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenCorner.Views.ContactsPage"
             Title="Contacts"
             BackgroundColor="{StaticResource BackgroundLight}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Label Text="Get in Touch" Style="{StaticResource Headline1}" TextColor="{StaticResource Primary}"/>

            <Border Style="{StaticResource CardFrame}" Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Entry Placeholder="Name" BackgroundColor="{StaticResource White}" TextColor="{StaticResource TextLight}"/>
                    <Entry Placeholder="Email" BackgroundColor="{StaticResource White}" TextColor="{StaticResource TextLight}"/>
                    <Editor Placeholder="Message" HeightRequest="100" BackgroundColor="{StaticResource White}" TextColor="{StaticResource TextLight}"/>
                    <Button Text="Send Message" Style="{StaticResource PrimaryButtonStyle}"/>
                </VerticalStackLayout>
            </Border>

            <VerticalStackLayout Spacing="10" Margin="0,20,0,0">
                <Label Text="Visit Us" Style="{StaticResource Headline2}"/>
                <Label Text="123 Plant Street, Jungle City" TextColor="{StaticResource Gray600}"/>
                <Label Text="hello@greencorner.com" TextColor="{StaticResource Primary}" FontAttributes="Bold"/>
                <Label Text="+1 (555) 123-4567" TextColor="{StaticResource Gray600}"/>
            </VerticalStackLayout>
            
            <!-- Placeholder for Map -->
            <BoxView HeightRequest="200" Color="#E1E1E1" Margin="0,20,0,0"/> 
            <Label Text="Map Placeholder" HorizontalOptions="Center" Margin="0,-110,0,0" TextColor="{StaticResource Gray500}"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
